// 1. Frase, comprimento e maiúsculas
let frase = "Olá, mundo!";
console.log("1. Comprimento da frase:", frase.length);
console.log("1. Frase em maiúsculas:", frase.toUpperCase());

// 2. Variáveis null e undefined
let variavelNull = null;
let variavelUndefined;

console.log("2. Valor da variável null:", variavelNull);
console.log("2. Valor da variável undefined:", variavelUndefined);

// 3. Variáveis de tipos diferentes e template strings
let numero = 42;
let texto = "Olá";
let booleano = true;

let resultado = `3. Número: ${numero}, Texto: ${texto}, Booleano: ${booleano}`;
console.log(resultado);

// 4. Conversão entre número e string
let num = 123;
let str = "456";

let numParaStr = num.toString();
let strParaNum = parseInt(str);

console.log("4. Tipo após conversão de número para string:", typeof numParaStr);
console.log("4. Tipo após conversão de string para número:", typeof strParaNum);

// 5. Manipulação de strings
let mensagem = "JavaScript é incrível!";

let upperCase = mensagem.toUpperCase();
let lowerCase = mensagem.toLowerCase();
let sliceTexto = mensagem.slice(0, 10);

console.log("5. Texto em maiúsculas:", upperCase);
console.log("5. Texto em minúsculas:", lowerCase);
console.log("5. Texto fatiado:", sliceTexto);

// 6. Operações bancárias
let saldo = 1000;
let deposito = 200;
let saque = 150;

let operacao = deposito - saque;
saldo += operacao;

console.log("6. Saldo final após depósito e saque:", saldo);

// 7. Verificação de número par ou ímpar
let valor = 7;
let resultadoParImpar = valor % 2 === 0 ? "Par" : "Ímpar";
console.log("7. O número é:", resultadoParImpar);

// 8. Verificação de login e permissão de administrador
let usuarioLogado = true;
let usuarioAdmin = false;

let temAcesso = usuarioLogado && usuarioAdmin;
console.log("8. O usuário tem acesso?", temAcesso);

// 9. Verificação de pelo menos uma variável verdadeira
let condicao1 = false;
let condicao2 = true;

let resultadoOr = condicao1 || condicao2;
console.log("9. Pelo menos uma condição é verdadeira?", resultadoOr);

// 10. Verificação de idade para compra de ingresso
let idadeMinima = 18;
let idadeUsuario = 20;

if (idadeUsuario >= idadeMinima) {
    console.log("10. O usuário pode comprar o ingresso.");
} else {
    console.log("10. O usuário não pode comprar o ingresso.");
}

// 11. Função de saudação personalizada
function saudacao(nome) {
    return `11. Olá, ${nome}!`;
}

console.log(saudacao("Ana"));

// 12. Função para verificar maioridade
function verificarIdade(idade) {
    return idade >= 18 ? "12. Maior de idade" : "12. Menor de idade";
}

console.log(verificarIdade(16));  // Exemplo de uso

// 13. Função para verificar se uma palavra é um palíndromo
function verificaPalindromo(str) {
    // Reverter a string e comparar com a original
    let strReversa = str.split('').reverse().join('');
    
    // Verificar se a string original é igual à reversa
    if (str === strReversa) {
        console.log(true);  // Se for palíndromo
        return true;
    } else {
        console.log(false);  // Se não for palíndromo
        return false;
    }
}

// 14. Função para determinar o maior número entre três
function maiorNumero(a, b, c) {
    let maior;

    if (a >= b && a >= c) {
        maior = a;
    } else if (b >= a && b >= c) {
        maior = b;
    } else {
        maior = c;
    }

    console.log("O maior número é:", maior);
    return maior;
}

// 15. Função para calcular a potência de um número
function calculaPotencia(base, expoente) {
    let resultado = Math.pow(base, expoente);  // Calcula a potência
    console.log("Resultado da potência:", resultado);
    return resultado;
}

// Exemplos de uso

// Teste para a função verificaPalindromo
verificaPalindromo("arara");  // true
verificaPalindromo("olá");    // false

// Teste para a função maiorNumero
maiorNumero(5, 8, 3);  // "O maior número é: 8"
maiorNumero(10, 7, 15); // "O maior número é: 15"

// Teste para a função calculaPotencia
calculaPotencia(2, 3);  // 8
calculaPotencia(5, 2);  // 25

